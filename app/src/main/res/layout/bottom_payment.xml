<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_10sdp"
    android:background="@drawable/bottom_shape"
    android:layout_height="wrap_content">

    <View
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_2sdp"
        android:layout_gravity="center"
        android:alpha=".5"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="#A1A1A1"/>
    
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnNaqd"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:backgroundTint="#E4E4E4"
        app:strokeColor="#BFBFBF"
        android:clickable="true"
        android:focusable="true"
        app:strokeWidth="1dp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_height="@dimen/_50sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/icMoney"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/money" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/icMoney"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_15sdp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="Naqd to'lash"/>

            <RadioButton
                android:id="@+id/rdb1"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                style="@style/Widget.App.RadioButton"
                android:clickable="false"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnPlastik"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:backgroundTint="#E4E4E4"
        app:strokeColor="#BFBFBF"
        app:strokeWidth="1dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_height="@dimen/_50sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/icCard"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/card"
                android:padding="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_toEndOf="@id/icCard"
                android:text="Plastik karta"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <RadioButton
                android:id="@+id/rdb2"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                style="@style/Widget.App.RadioButton"
                android:clickable="false"

                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnNasiya"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:backgroundTint="#E4E4E4"
        app:strokeColor="#BFBFBF"
        app:strokeWidth="1dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_height="@dimen/_50sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/icQarz"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerVertical="true"
                android:padding="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/book" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/icQarz"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_15sdp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="Qarzga olish"/>

            <RadioButton
                android:id="@+id/rdb3"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:clickable="false"

                style="@style/Widget.App.RadioButton"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTolash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To'lamoq"
        android:textSize="@dimen/_14ssp"
        android:backgroundTint="#FB2807"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/_20ssp"
        app:cornerRadius="@dimen/_10sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"/>



</LinearLayout>